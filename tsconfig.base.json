{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@chat-app/domain": ["libs/web/chat/data-access-chat/src/index.ts"],
      "@chat-app/dtos": ["libs/shared/dtos/src/index.ts"],
      "@chat-app/environment": [
        "libs/web/shared/util/environment/src/index.ts"
      ],
      "@chat-app/feature-account": [
        "libs/web/account/feature-account/src/index.ts"
      ],
      "@chat-app/feature-conversation-list": [
        "libs/web/chat/feature-conversation-list/src/index.ts"
      ],
      "@chat-app/feature-conversation-panel": [
        "libs/web/chat/feature-conversation-panel/src/index.ts"
      ],
      "@chat-app/network": ["libs/web/shared/util/network/src/index.ts"],
      "@chat-app/ui-button": [
        "libs/web/shared/design-system/ui-button/src/index.ts"
      ],
      "@chat-app/ui-dropdown": [
        "libs/web/shared/design-system/ui-dropdown/src/index.ts"
      ],
      "@chat-app/ui-modal": [
        "libs/web/shared/design-system/ui-modal/src/index.ts"
      ],
      "@chat-app/ui-notifier": [
        "libs/web/shared/design-system/ui-norifier/src/index.ts"
      ],
      "@chat-app/util-routing": ["libs/web/shared/util/routing/src/index.ts"],
      "@chat-app/web/shared/util/auth": [
        "libs/web/shared/util/auth/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
